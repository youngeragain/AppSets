<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AppSets.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppSets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Frame Name="MainWindowFrame"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border x:Name="AppTitleBar">
                <Grid>
                    <StackPanel Orientation="Horizontal" Grid.Column="0"  Grid.ColumnSpan="2" HorizontalAlignment="Center"  Margin="0,4,0,4" >
                        <RelativePanel Margin="0,0,0,0">
                            <TextBox x:Name="SearchBox" AutomationProperties.Name="simple TextBox" Width="250" PlaceholderText="在此键入以搜索" Padding="34,6,0,6" VerticalContentAlignment="Center"/>
                            <ImageIcon Source="ms-appx:///Assets/search_FILL0_wght400_GRAD0_opsz48.svg" Width="24" Height="24" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="8,0,0,0"/>
                        </RelativePanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
